<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.BanDocLogin"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    android:gravity="center">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_taikhoan"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/serif"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Đăng ký tài khoản cho bạn đọc"
            android:textColor="#f20"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/edtTaiKhoan"
                android:inputType="text"
                android:hint="Mã sinh viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/edtTenSv"
                android:inputType="text"
                android:hint="Tên sinh viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/edtMatKhau"
                android:inputType="textPassword"
                android:hint="Nhập mật khẩu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/edtNhapLaiPass"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/statusRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:fontFamily="@font/cucho"
                android:id="@+id/btnBack"
                android:textColor="@color/white"
                android:backgroundTint="#f20"
                android:textSize="18sp"
                android:text="Trở lại"
                android:padding="15dp"
                android:background="@drawable/border_dangnhap"
                android:layout_marginTop="10dp"
                android:layout_width="130dp"
                android:layout_marginRight="10dp"
                android:onClick="login"
                android:layout_height="wrap_content"/>
            <Button
                android:fontFamily="@font/cucho"
                android:id="@+id/btndangky"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/border_dangnhap"
                android:text="Đăng ký"
                android:onClick="save"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>