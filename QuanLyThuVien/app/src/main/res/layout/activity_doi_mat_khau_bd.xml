<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity.DoiMatKhauBD">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDMMBD"
        android:fontFamily="@font/cucho"
        app:titleTextColor="@color/white"
        app:title="Đổi mật khẩu"
        android:background="@color/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:fontFamily="@font/serif"
            android:id="@+id/editOldPassBD"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Mật khẩu cũ"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:fontFamily="@font/serif"
            android:id="@+id/editNewPassBD"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Mật khẩu mới"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textSize="20sp"
            android:fontFamily="@font/cucho"
            android:id="@+id/btnResetPassBD"
            android:textColor="@color/white"
            android:backgroundTint="@color/title"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_dangnhap"
            android:text="Đổi mật khẩu"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>