<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <TextView
        android:id="@+id/tvTenSachTT"
        android:fontFamily="@font/serif"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="Tên sách"
        android:textColor="#f20"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <ImageView
            android:layout_weight="3"
            android:id="@+id/imgSachTT"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_pen"
                android:drawablePadding="5dp"
                android:id="@+id/tvTacGiaTT"
                android:fontFamily="@font/serif"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="Tác giả"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_printer"
                android:drawablePadding="5dp"
                android:id="@+id/tvNXBTT"
                android:fontFamily="@font/serif"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="Nhà xuất bản"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_series"
                android:drawablePadding="5dp"
                android:id="@+id/tvSeriesTT"
                android:fontFamily="@font/serif"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="Số series"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ngày sản xuất"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvNSXTT"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ngày sản xuất"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ngôn ngữ"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvNgonNguTT"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ngày sản xuất"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Giá sách"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvGiaSachTT"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/serif"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Giá sách"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Lời tựa"
                android:textColor="#f20"
                android:textSize="20sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tvLoiTuaTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:fontFamily="@font/serif"
                    android:textSize="16sp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>