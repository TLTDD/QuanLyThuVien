<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_taikhoan"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/serif"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Thông tin sinh viên"
            android:textColor="@color/title"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:id="@+id/edtTenBanDoc"
                android:inputType="text"
                android:hint="Nhập tên bạn đọc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:id="@+id/edtMSSV"
                android:inputType="phone"
                android:hint="Nhập MSSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="16sp"
                android:id="@+id/edtNgayMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nhập ngày mượn"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="16sp"
                android:id="@+id/edtNgayTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nhập ngày trả"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_gravity="left"
            android:fontFamily="@font/serif"
            android:textSize="16sp"
            android:id="@+id/btnChonBanDoc"
            android:background="@color/title"
            android:textColor="@color/white"
            android:text="Chọn sinh viên >"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:layout_marginRight="70dp"
                android:backgroundTint="@color/title"
                android:background="@drawable/border_dangnhap"
                android:textSize="18sp"
                android:textColor="#f20"
                android:fontFamily="@font/cucho"
                android:padding="10dp"
                android:id="@+id/btnXacNhan"
                android:text="Xác nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:fontFamily="@font/cucho"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/border_dangnhap"
                android:padding="10dp"
                android:id="@+id/btnHuy"
                android:text="Trở về"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>