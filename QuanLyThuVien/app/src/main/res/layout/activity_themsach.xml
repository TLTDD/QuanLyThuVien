<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbThemSach"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/title"
        app:title="Thêm sách"
        android:fontFamily="@font/cucho"
        app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtIdKeSach"
                    android:hint="Kệ sách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtTenSach"
                    android:hint="Tên sách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtTacGia"
                    android:hint="Tác giả"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtNXB"
                    android:hint="Nhà xuất bản"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtNgayXB"
                    android:hint="Ngày xuất bản"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtNgonNgu"
                    android:hint="Ngôn ngữ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtgiaSach"
                    android:hint="Giá sách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtSoSeries"
                    android:hint="Số Series"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtSoLuong"
                    android:hint="Số lượng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtLoiTua"
                    android:hint="Lời tựa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/serif"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:id="@+id/edtHinhAnhSach"
                    android:hint="Hình ảnh sách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/cucho"
                android:id="@+id/btnMucThemSach"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Thêm"
                android:padding="15dp"
                android:backgroundTint="@color/title"
                android:background="@drawable/border_dangnhap"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:onClick="login"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>