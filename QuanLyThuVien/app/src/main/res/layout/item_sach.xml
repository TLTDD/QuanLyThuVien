<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewSach"
        app:cardCornerRadius="7dp"
        android:elevation="30dp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="225dp" >
        <RelativeLayout
            android:backgroundTint="#FFD58C"
            android:background="@drawable/border_sach"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSach"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="4dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvTenSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/serif"
                    android:gravity="center"
                    android:text="Tên sách"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTenTacGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/serif"
                    android:gravity="center"
                    android:text="Tên tác giá"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvGiaSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/serif"
                    android:gravity="center"
                    android:text="Giá sách"
                    android:textColor="#f20"
                    android:textSize="12sp" />
            </LinearLayout>

            <!--<ImageView
                android:id="@+id/btndeleteSach"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_delete" />-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>